<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:background="@drawable/pokemon_info_backgroung">

    <LinearLayout
        android:id="@+id/button_menue_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/combeeicon"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginHorizontal="15dp"/>

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/pokedex_image"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginHorizontal="15dp"/>

        <ImageButton
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:src="@drawable/mock_battle_image"
            android:scaleType="fitCenter"
            android:background="#00000000"
            android:layout_marginHorizontal="15dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/table_info_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/button_menue_2"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="75dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Information goes here"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pokemon picture goes here"
            android:layout_marginHorizontal="15dp"/>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>
